{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Sid": "Statement1",
          "Effect": "Allow",
          "Principal": "*",
          "Action": [
              "s3:ListBucket",
              "s3:GetObject"
          ],
          "Resource": [
              "arn:aws:s3:::{bucketName}",
              "arn:aws:s3:::{bucketName}/*"
          ]
      },
      {
          "Sid": "Statement2",
          "Effect": "Deny",
          "Principal": "*",
          "Action": "s3:*",
          "Resource": "arn:aws:s3:::{bucketName}/*",
          "Condition": {
              "StringNotLike": {
                  "aws:Referer": "https://xxxx.cloudfront.net/*"
              }
          }
      }
  ]
}