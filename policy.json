{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublicReadGetObject",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::[my-bucket]/*",
      "Condition": {
          "StringLike": {
              "aws:Referer": "https://xxxx.cloudfront.net/*"
          }
      }
    },
    {
      "Sid": "DenyWithoutCloudFront",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": "arn:aws:s3:::[my-bucket]/*",
      "Condition": {
          "StringNotLike": {
              "aws:Referer": "https://xxxx.cloudfront.net/*"
          }
      }
    }
  ]
}