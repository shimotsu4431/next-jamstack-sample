{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Sid": "PublicList",
          "Effect": "Allow",
          "Principal": {
              "AWS": "arn:aws:iam::625849518644:user/jamstack-sample-user"
          },
          "Action": "s3:ListBucket",
          "Resource": [
              "arn:aws:s3:::shimotsu-example-bucket",
              "arn:aws:s3:::shimotsu-example-bucket/*"
          ]
      },
      {
          "Sid": "PublicReadGetObject",
          "Effect": "Allow",
          "Principal": "*",
          "Action": "s3:GetObject",
          "Resource": "arn:aws:s3:::shimotsu-example-bucket/*",
          "Condition": {
              "StringLike": {
                  "aws:Referer": "https://d1ocf77jr70lm2.cloudfront.net/*"
              }
          }
      }
  ]
}